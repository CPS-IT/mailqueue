{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>CPS-IT/renovate-config",
		"local>CPS-IT/renovate-config:typo3-extension"
	],
	"assignees": [
		"eliashaeussler"
	],
	"packageRules": [
		{
			"constraints": {
				"php": "8.1.*"
			},
			"matchFileNames": [
				"composer.json"
			]
		},
		{
			"extends": [
				":pinVersions"
			],
			"constraints": {
				"php": "8.4.*"
			},
			"matchFileNames": [
				"Tests/CGL/composer.json"
			]
		}
	]
}
